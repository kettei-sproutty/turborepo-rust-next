{
  "name": "turborepo-rust-next",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "install:rust": "chmod +x ./scripts/install-rust.sh && ./scripts/install-rust.sh",
    "build:rust": "chmox +x ./scripts/build-rust.sh && ./scripts/build-rust.sh",
    "check:toml": "taplo format --check",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@taplo/cli": "^0.5.2",
    "eslint-config-custom": "workspace:*",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "turbo": "latest"
  },
  "lint-staged": {
    "*.toml": [
      "taplo format"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.1.0"
}